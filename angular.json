{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "packages",
  "projects": {
    "console-app": {
      "projectType": "application",
      "schematics": {},
      "root": "packages/console-app",
      "sourceRoot": "packages/console-app/src",
      "prefix": "app",
      "i18n": {
        "sourceLocale": "en",
        "locales": {
          "de": "packages/console-app/assets/locales/locale.de.xlf"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "build/console-app",
            "index": "packages/console-app/index.html",
            "browser": "packages/console-app/source/app.ts",
            "tsConfig": "packages/console-app/tsconfig.app.json",
            "polyfills": ["zone.js"],
            "assets": [
              {
                "glob": "favicon.png",
                "input": "packages/console-app",
                "output": ""
              },
              {
                "glob": "favicon.svg",
                "input": "packages/console-app",
                "output": ""
              },
              {
                "glob": "**/*",
                "input": "packages/console-app/assets",
                "output": "assets/",
                "ignore": ["locales"]
              },
              {
                "glob": "**/*",
                "input": "packages/console-ui/assets",
                "output": "assets/"
              }
            ],
            "styles": [
              "packages/console-app/index.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "packages/console-ui/source/stylesheets"
              ]
            },
            "scripts": []
          },
          "configurations": {
            "production": {
              "aot": true,
              "optimization": true,
              "extractLicenses": false,
              "sourceMap": false,
              "namedChunks": false,
              "outputHashing": "all"
            },
            "development": {
              "aot": true,
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "locale-en": {
              "localize": ["en"],
              "baseHref": "/en/"
            },
            "locale-de": {
              "localize": ["de"],
              "baseHref": "/de/"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "development-en": {
              "buildTarget": "console-app:build:development,locale-en"
            },
            "development-de": {
              "buildTarget": "console-app:build:development,locale-de"
            }
          },
          "defaultConfiguration": "development-de"
        },
        "extract-i18n": {
          "builder": "ng-extract-i18n-merge:ng-extract-i18n-merge",
          "options": {
            "buildTarget": "console-app:build",
            "format": "xlf",
            "outputPath": "packages/console-app/assets/locales",
            "targetFiles": [
              "locale.de.xlf"
            ]
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/console-app/tsconfig.spec.json",
            "assets": [
              "packages/console-app/src/favicon.ico",
              "packages/console-app/src/assets"
            ],
            "styles": [
              "packages/console-app/src/styles.css"
            ],
            "scripts": []
          }
        }
      }
    },
    "console-ui": {
      "projectType": "library",
      "root": "packages/console-ui",
      "sourceRoot": "packages/console-ui/src",
      "prefix": "console",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/console-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/console-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/console-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/console-ui/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    }
  }
}
